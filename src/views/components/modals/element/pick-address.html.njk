{% extends "components/modals/abstract-modal.html.njk" %}

{% block modalClass %}simple-modal{% endblock %}

{% block submitText %}Calculer l'itinéraire{% endblock %}

{% block id %}pick-address{% endblock %}

{% block content %}
  <h5 id="modal-title">Entrez une adresse de départ</h5>
  <div class="modal-error-msg">Impossible de localiser cette adresse !</div>
  <input type="text" 
         class="input-simple-modal"
         onClick="this.setSelectionRange(0, this.value.length)"
         placeholder="L'adresse de départ"  />  
{% endblock %}

<div id="modal-directions-fail" class="modal">
  <div class="modal-content">

    <h5 id="modal-title">Calcul d'un itinéraire</h5>
    <p>Une ereur est survenue pendant le calcul de l'itinéraire, désolé !</p>   
  </div>
  <div class="modal-footer">
    <span class="modal-action modal-close waves-effect waves-light btn-flat">OK</span>
  </div>   
</div>