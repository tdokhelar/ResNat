<div id="directory-loading" style="display:none">
  Chargement...
</div> 

<div id="map-gogo-controls">
  {% include 'components/buttons/show-directory-menu-button.html.njk' %}
  
  {% if config.isFeatureActivated('listMode') %}
    <div class="show-as-list-button gogo-map-control gogo-primary"><i class="gogo-icon-list"></i></div>  
  {% endif %} 
</div>

<div id="map-features-buttons">
  {% if config.isFeatureActivated('layers') %}
    <div id="change-layers" class="feature-button leaflet-bar" data-tooltip="Changer le fond de carte" data-position="left" data-delay="300">
      <i class="gogo-icon-layers"></i>
    </div> 
    <div id="close-layers-panel" class="feature-button" style="display:none"><i class="gogo-icon-close"></i></div>
  {% endif %}
  
  {% if config.isFeatureActivated('export') %}
    <div id="export-iframe-btn" class="feature-button leaflet-bar" data-tooltip="Exporter une iframe" data-position="left" data-delay="300">
      <i class="gogo-icon-share-alt"></i>
    </div> 
  {% endif %}

  {% if config.isFeatureActivated('mapdefaultview') %}
    <div id="map-default-view-btn" class="feature-button leaflet-bar" data-tooltip="Retourner à la vue par défault" data-position="left" data-delay="300">
      <i class="gogo-icon-map"></i>
    </div> 
  {% endif %}

